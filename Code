#include <Servo.h>

Servo servo_0; // Declaration of the object to control the first servo
Servo servo_1; // Declaration of the object to control the second servo
Servo servo_2; // Declaration of the object to control the third servo
Servo servo_3; // Declaration of the object to control the fourth servo
Servo servo_4; // Declaration of the object to control the fifth servo
Servo servo_5; // Declaration of the object to control the sixth servo


void setup() {
  Serial.begin(9600); // Initialize serial communication
servo_0.attach(2); // Associate servo_0 with pin 2
servo_1.attach(3); // Associate servo_1 with pin 3
servo_2.attach(4); // Associate servo_2 with pin 4
servo_3.attach(5); // Associate servo_3 with pin 5
servo_4.attach(6); // Associate servo_4 with pin 6
servo_5.attach(7); // Associate servo_5 with pin 7
}

void loop() {
  if (Serial.available() > 0) { // If data is available to read
   String input = Serial.readStringUntil('\n'); // Read the data string up to the newline
   int servoIndex = input.substring(0, 1).toInt(); // Get the servo index
   int servoValue = input.substring(2).toInt(); // Get the servo value
    switch (servoIndex) {
      case 1:
        servo_0.write(servoValue);
        break;
      case 2:
        servo_1.write(servoValue);
        break;
      case 3:
        servo_2.write(servoValue);
        break;
      case 4:
        servo_3.write(servoValue);
        break;
      case 5:
        servo_4.write(servoValue);
        break;
      case 6:
        servo_5.write(servoValue);
        
        break;
      default:
        // Invalid servo index
        break;
    }
  }
}
